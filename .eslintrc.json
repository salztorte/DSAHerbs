{
  "rules" : {
    "indent" : [2, 4, {"SwitchCase": 1}],
    "quotes" : [2, "single"],
    "semi" : [2, "always"],
    "strict" : [2, "global"],
    "no-console": 0,
    "no-undefined": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "after-used", "varsIgnorePattern":"React"}]
  },
  "env" : {
    "es6" : true,
    "browser" : true,
    "mocha" : true,
    "commonjs" : true
  },
  "extends" : "eslint:recommended",
  "ecmaFeatures" : {
    "jsx" : true,
    "experimentalObjectRestSpread" : true,
    "modules": true
  },
  "plugins" : [
    "react"
  ],
  "globals": {
    "PouchDB": true
  }
}